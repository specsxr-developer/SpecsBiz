
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // চেক করে ইউজার লগইন করা আছে কিনা এবং সে কি এই ডাটার মালিক
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // ইউজার ডিরেক্টরি এবং তার নিচের সবকিছুর জন্য রুলস
    match /users/{userId} {
      
      // মালিক হিসেবে নিজের পুরো ডিরেক্টরিতে সব করার অনুমতি (রিড এবং রাইট)
      // এটি ছবি আপলোড এবং ডিলিট করার সমস্যা সমাধান করবে
      allow read, write: if isOwner(userId);

      // মালিকের ডিরেক্টরির ভেতরে থাকা সব সাব-কালেকশনের জন্য মালিকের পূর্ণ ক্ষমতা
      match /{allPaths=**} {
        allow read, write: if isOwner(userId);
      }

      // কাস্টমারদের জন্য পাবলিক রিড এক্সেস (যাতে তারা আপনার ওয়েবসাইট দেখতে পারে)
      match /products/{productId} {
        allow get, list: if true;
      }

      match /shopProducts/{productId} {
        allow get, list: if true;
      }

      match /shopConfig/{configId} {
        allow get: if true;
      }
    }

    // অন্য কোনো পাথ সরাসরি এক্সেস করা যাবে না
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
