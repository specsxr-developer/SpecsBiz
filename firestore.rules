
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper to check if the user is the owner of the data
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Comprehensive rule for the owner's entire directory
    match /users/{userId}/{document=**} {
      // Grant full access to the owner for everything in their path
      allow read, write: if isOwner(userId);
    }

    // Public access rules for customers viewing the shop
    match /users/{userId}/products/{productId} {
      allow get, list: if true;
    }

    match /users/{userId}/shopProducts/{productId} {
      allow get, list: if true;
    }

    match /users/{userId}/shopConfig/{configId} {
      allow get: if true;
    }

    // Default deny
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
