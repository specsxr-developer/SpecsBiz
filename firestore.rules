
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper to check if the user is the owner of the data
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // PRIMARY OWNER ACCESS: Grant full recursive access to the owner's root path
    // This covers products, shopProducts, shopConfig, etc.
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }

    // PUBLIC READ ACCESS: Specifically allow anyone to view shop data
    // This ensures customers can see the website without logging in
    
    match /users/{userId}/products/{productId} {
      allow get, list: if true;
    }

    match /users/{userId}/shopProducts/{productId} {
      allow get, list: if true;
    }

    match /users/{userId}/shopConfig/{configId} {
      allow get: if true;
    }

    // Default deny for everything else
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
