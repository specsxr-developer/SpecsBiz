
{
  "entities": {
    "Product": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Product",
      "type": "object",
      "description": "Represents a product in the inventory.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "sku": { "type": "string" },
        "barcode": { "type": "string" },
        "price": { "type": "number" },
        "stockQuantity": { "type": "number" },
        "alertThreshold": { "type": "number" },
        "purchasePrice": { "type": "number" },
        "sellingPrice": { "type": "number" },
        "stock": { "type": "number" },
        "unit": { "type": "string" },
        "category": { "type": "string" },
        "imageUrl": { "type": "string", "description": "Base64 data URI of the main product photo" },
        "reviewImages": { 
          "type": "array", 
          "items": { "type": "string" },
          "description": "Array of Base64 data URIs for product reviews (max 5)"
        }
      },
      "required": ["id", "name"]
    },
    "Procurement": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Procurement",
      "type": "object",
      "description": "Represents a stock buying/restock record.",
      "properties": {
        "id": { "type": "string" },
        "productId": { "type": "string" },
        "productName": { "type": "string" },
        "quantity": { "type": "number" },
        "buyPrice": { "type": "number" },
        "totalCost": { "type": "number" },
        "date": { "type": "string", "format": "date-time" }
      }
    },
    "Sale": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Sale",
      "type": "object",
      "description": "Represents a sale transaction.",
      "properties": {
        "id": { "type": "string" },
        "customerId": { "type": "string" },
        "saleDate": { "type": "string", "format": "date-time" },
        "totalAmount": { "type": "number" },
        "total": { "type": "number" },
        "profit": { "type": "number" },
        "items": { "type": "array" }
      }
    },
    "Customer": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Customer",
      "type": "object",
      "description": "Represents a customer with credit/baki management.",
      "properties": {
        "id": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "address": { "type": "string" },
        "totalDue": { "type": "number" },
        "segment": { "type": "string" }
      },
      "required": ["id", "firstName"]
    },
    "AIMessage": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "AIMessage",
      "type": "object",
      "description": "Represents a chat message between user and AI.",
      "properties": {
        "role": { "type": "string", "enum": ["user", "assistant"] },
        "content": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      }
    },
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the application.",
      "properties": {
        "id": { "type": "string" },
        "username": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string" }
      },
      "required": ["id", "username", "email", "role"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": { "entityName": "User", "schema": { "$ref": "#/backend/entities/User" } }
      },
      {
        "path": "/users/{userId}/products/{productId}",
        "definition": { "entityName": "Product", "schema": { "$ref": "#/backend/entities/Product" } }
      },
      {
        "path": "/users/{userId}/procurements/{procurementId}",
        "definition": { "entityName": "Procurement", "schema": { "$ref": "#/backend/entities/Procurement" } }
      },
      {
        "path": "/users/{userId}/customers/{customerId}",
        "definition": { "entityName": "Customer", "schema": { "$ref": "#/backend/entities/Customer" } }
      },
      {
        "path": "/users/{userId}/sales/{saleId}",
        "definition": { "entityName": "Sale", "schema": { "$ref": "#/backend/entities/Sale" } }
      },
      {
        "path": "/users/{userId}/aiMessages/{messageId}",
        "definition": { "entityName": "AIMessage", "schema": { "$ref": "#/backend/entities/AIMessage" } }
      },
      {
        "path": "/users/{userId}/advisorMessages/{messageId}",
        "definition": { "entityName": "AIMessage", "schema": { "$ref": "#/backend/entities/AIMessage" } }
      }
    ]
  }
}
